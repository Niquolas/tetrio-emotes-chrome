{
  "name": "Emote Picker for TETR.IO",
  "description": "Adds emote autocompletion to TETR.IO",
  "version": "2.0.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://tetr.io/*"],
      "js": ["picker.js"],
      "css": ["picker.css"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "*://tetr.io/*",
    "*://emotes.kagar.in/*"
  ],
  "icons": {
    "256": "icon256.png",
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  }
}
